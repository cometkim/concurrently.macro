{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "incremental": true,
    "outDir": ".",
    "declaration": true,
    "declarationDir": ".",
    "emitDeclarationOnly": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "*.d.ts"
  ]
}
